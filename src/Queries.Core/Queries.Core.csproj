<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Contains the core classes to build queries.</Description>
    <AssemblyTitle>Queries.Core</AssemblyTitle>
    <VersionPrefix>4.0.0</VersionPrefix>
    <Authors>Cyrille NDOUMBE</Authors>
    <TargetFrameworks>netstandard1.0; netstandard1.1; netstandard1.3</TargetFrameworks>
    <AssemblyName>Queries.Core</AssemblyName>
    <PackageId>Queries.Core</PackageId>
    <PackageTags>Queries;Query;SQL;Builder</PackageTags>
    <PackageReleaseNotes>
      Replaced "prettyPrint" parameter with "QueryRendererSettings".
    </PackageReleaseNotes>
    <PackageProjectUrl>https://github.com/candoumbe/Queries</PackageProjectUrl>
    <Version>4.0.1</Version>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(TargetFramework)' == 'netstandard1.0'">
      <ItemGroup>
        <PackageReference Include="FluentValidation" Version="7.4.0" />
        <PackageReference Include="System.ValueTuple" Version="4.5.0" />
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="FluentValidation" Version="8.0.100" />
      </ItemGroup>
    </Otherwise>
  </Choose>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Roslynator.Analyzers" Version="1.9.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Collections.Immutable" Version="1.5.0" />
    <PackageReference Include="System.Linq.Queryable" Version="4.3.0" />
    <PackageReference Include="System.Runtime" Version="4.3.0" />
    <PackageReference Include="System.Runtime.Extensions" Version="4.3.0" />
    

  </ItemGroup>
</Project>
